<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_news"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.daytoday.app.AulaMagnaApp.NewsActivity"
    android:orientation="vertical">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                        <ImageView
                            android:id="@+id/activity_main_toolbar_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/logo_toolbar"
                            />
                </android.support.v7.widget.Toolbar>
                    />
        </android.support.design.widget.AppBarLayout>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    >

                        <ImageView
                            android:id="@+id/card_image_view1"
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:scaleType="centerCrop"
                            android:layout_marginBottom="10dp"
                            />

                        <TextView
                            android:id="@+id/card_text_title1"
                            tools:text="Main title"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="start"
                            android:textColor="#FF0000"
                            android:elegantTextHeight="true"
                            android:textSize="30dp"
                            android:padding="4dp"/>




                        <TextView
                            android:padding="7dp"
                            android:id="@+id/card_text_description1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="18dp"
                            android:textColor="#000"
                            android:textAlignment="gravity"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/card_text_date1"
                                    android:layout_width="wrap_content"
                                    android:textColor="#BDBDBD"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    tools:text="20.01.2017"/>

                                <TextView
                                    android:id="@+id/card_text_category1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#BDBDBD"
                                    tools:text="Deporte"
                                    android:textStyle="bold"
                                    android:layout_alignParentRight="true">
                                </TextView>

                        </RelativeLayout>

                </LinearLayout>
        </ScrollView>
</LinearLayout>
