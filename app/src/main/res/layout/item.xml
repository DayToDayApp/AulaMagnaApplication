<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_margin="3dp"
    android:focusable="true"
    android:clickable="true"
    card_view:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/card_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"/>

    <TextView
        android:id="@+id/card_text_title"
        tools:text="Main title"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:layout_weight="2"
        android:textAlignment="gravity"
        android:textColor="@color/textCardColor"
        android:textSize="15sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/card_text_date"
                android:layout_width="wrap_content"
                android:textColor="@color/textCardColor"
                android:layout_height="wrap_content"
                tools:text="20.01.2017"/>

            <TextView
                android:id="@+id/card_text_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textCardColor"
                tools:text="Deporte"
                android:layout_alignParentRight="true">
            </TextView>

            <TextView
                android:id="@+id/card_text_description"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"/>
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
